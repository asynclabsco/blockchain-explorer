<div class="c-transactions__list">
    <h2>Transactions</h2>
    {% for transaction in transactions %}
        <div class="c-transactions__list-item">
            <div class="c-transaction">
                <div class="c-transaction__hash">
                    <a href="{{ path('be.transaction.show_transaction', {id: transaction.txHash}) }}">
                        {{ transaction.txHash }}
                    </a>
                </div>
                <div class="c-transaction__block">
                    <a href="{{ path('be.block.show_block', {blockHashOrNumber: transaction.block.blockNumber}) }}">
                        {{ '#' ~ transaction.block.id ~ '[' ~ transaction.index ~ ']' }}
                    </a>
                </div>
                <div class="c-transaction__from">
                    From:
                    <a href="{{ path('be.address.show_address', {address: transaction.from.address}) }}">
                        {{ transaction.from.address }}
                    </a>
                </div>
                <div class="c-transaction__to">
                    To:
                    <a href="{{ path('be.address.show_address', {address: transaction.to.address}) }}">
                        {{ transaction.to.address }}
                    </a>
                </div>
                <div class="c-transaction__value">
                    Amount {{ transaction.value|weiTransform('ether') }} ETH
                </div>
            </div>
        </div>
    {% endfor %}

    {% if transactions|length == 0 %}
        There are no transactions.
    {% endif %}
</div>
