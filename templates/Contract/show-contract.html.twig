{% extends 'base.html.twig' %}

{% block body %}
    <div class="c-show-contract-page">
        <h1>Contract</h1>
        <div class="c-show-contract-page__info">
            <div class="c-show-contract-page__info-item">
                <div class="c-show-contract-page__info-item-label">
                    Token
                </div>
                <div class="c-show-contract-page__info-item-value">
                    {{ contract.isErc20Token() ? 'ERC20' }}
                    {{ contract.isErc721Token() ? 'ERC721' }}
                </div>
            </div>
            {% if contract.isErc20Token() %}
                <div class="c-show-contract-page__info-item">
                    <div class="c-show-contract-page__info-item-label">
                        Name
                    </div>
                    <div class="c-show-contract-page__info-item-value">
                        {{ contract.erc20Token.name }}
                    </div>
                </div>
                <div class="c-show-contract-page__info-item">
                    <div class="c-show-contract-page__info-item-label">
                        Symbol
                    </div>
                    <div class="c-show-contract-page__info-item-value">
                        {{ contract.erc20Token.symbol }}
                    </div>
                </div>
                <div class="c-show-contract-page__info-item">
                    <div class="c-show-contract-page__info-item-label">
                        Total supply
                    </div>
                    <div class="c-show-contract-page__info-item-value">
                        {{ contract.erc20Token.totalSupply }}
                    </div>
                </div>
            {% endif %}

            {% if contract.isErc721Token() %}
                <div class="c-show-contract-page__info-item">
                    <div class="c-show-contract-page__info-item-label">
                        Name
                    </div>
                    <div class="c-show-contract-page__info-item-value">
                        {{ contract.erc721Token.name }}
                    </div>
                </div>
                <div class="c-show-contract-page__info-item">
                    <div class="c-show-contract-page__info-item-label">
                        Symbol
                    </div>
                    <div class="c-show-contract-page__info-item-value">
                        {{ contract.erc721Token.symbol }}
                    </div>
                </div>
                <div class="c-show-contract-page__info-item">
                    <div class="c-show-contract-page__info-item-label">
                        Total supply
                    </div>
                    <div class="c-show-contract-page__info-item-value">
                        {{ contract.erc721Token.totalSupply }}
                    </div>
                </div>
            {% endif %}
            <div class="c-show-contract-page__info-item">
                <div class="c-show-contract-page__info-item-label"></div>
                <div class="c-show-contract-page__info-item-value">
                    <a href="{{ path('be.contracts.detect_tokens', {address: contract.address.address}) }}">
                        Detect Tokens
                    </a>
                </div>
            </div>
            {#<div class="c-show-contract-page__info-item">#}
                {#<div class="c-show-contract-page__info-item-label">#}
                    {#Bytecode#}
                {#</div>#}
                {#<div class="c-show-contract-page__info-item-value">#}
                    {#{{ contract.byteCode }}#}
                {#</div>#}
            {#</div>#}
        </div>

        <div class="c-show-contract-page__transactions">
            <h3>Transactions</h3>
            {% include 'Transaction/table-list-transactions.html.twig' with {transactions: transactions} only %}
        </div>
    </div>
{% endblock %}
