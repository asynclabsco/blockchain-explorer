<div class="c-table">
    <table>
        <thead>
        <tr>
            <th>Token</th>
            <th>Address</th>
            <th>Balance</th>
        </tr>
        </thead>
        <tbody>
        {% for contract in contracts %}
            <tr>
                <td>
                    {% if contract.erc20TokenValidation.eRC20Token %}
                        {{ contract.erc20TokenValidation.name }}
                        ({{ contract.erc20TokenValidation.symbol }})
                        [ERC20]
                    {% endif %}

                    {# TODO Token validation#}
                </td>
                <td>
                    <a href="{{ path('be.contracts.show_contract', {address: contract.address.address}) }}">
                        {{ contract.address.address }}
                    </a>
                </td>
                <td>{{ contract.address.ethereumBalance|weiTransform('ether') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<div class="{{ paginationClassName }}">
    {{ knp_pagination_render(contracts) }}
</div>
